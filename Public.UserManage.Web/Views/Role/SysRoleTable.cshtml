@model Webdiyer.WebControls.Mvc.PagedList<UserPermission.Role.Role>
@using Webdiyer.WebControls.Mvc
<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table_result">
    <tr>
        <th width="5%">ID</th>
        <th width="15%">角色名</th>
      
        <th width="15%">创建时间</th>
        <th width="10%">操作</th>
    </tr>
    @{
        if (Model != null && Model.Count > 0)
        {

            int i = 0;
            foreach (UserPermission.Role.Role dn in Model)
            {
             
                string classStr = "class=bg";
                if (i % 2 == 0)
                {
                    classStr = "";
                }

                {
                    <tr @classStr>
                        <td>@dn.Id</td>
                      
                        <td>@dn.Name</td>

                       
                        <td>@dn.CreateTime</td>
                        <td>
                            <div class="caozuo">
                                @{

                                    <a href="javascript:void(0);" onclick="UpdateDialog('@dn.Id')">修改</a>
                                  
                                }

                            </div>
                        </td>
                    </tr>
                }
                i++;


            }
        }


    }

</table>

<div class="the_pages">
    @Ajax.Pager(Model, new PagerOptions
   {
       Id = "mypager1",
       PageIndexParameterName = "PageIndex",
       PagerItemTemplate = "{0}",
       CurrentPagerItemTemplate = "<a class=\"linknow\">{0}</a>",
       DisabledPagerItemTemplate = "<span class='preview_off'>{0}</span>",
       FirstPageText = "首页",
       LastPageText = "尾页",
       NextPageText = "下一页",
       PrevPageText = "上一页",
   },
            new MvcAjaxOptions
            {
                UpdateTargetId = "SysRole-list",
                HttpMethod = "Post",
                DataFormId = "SysRole-search",
                EnableHistorySupport = false,
            })
</div>
<script type="text/javascript">
    $("#tem-c").html(@Model.TotalItemCount);
</script>